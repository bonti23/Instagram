        <Label fx:id="errorMessage" layoutX="382.0" layoutY="319.0" prefHeight="18.0" prefWidth="211.0" textAlignment="RIGHT" textFill="RED">
            <font>
                <Font name="Century Gothic Bold" size="15.0" />
            </font>
        </Label>

        <!-- Logo -->
        <ImageView fx:id="yahooLogo" fitHeight="133.0" fitWidth="182.0" layoutX="206.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/Instagram_logo.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>