    <children>
        <GridPane layoutX="168.0" layoutY="150.0" prefHeight="101.0" prefWidth="258.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints maxHeight="150.4" minHeight="10.0" prefHeight="42.400000000000006" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="150.4" minHeight="10.0" prefHeight="42.400000000000006" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="150.4" minHeight="10.0" prefHeight="42.400000000000006" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <!-- Updated Email Label to Email Address -->
                <Label id="emailLabel" text="Email address" GridPane.rowIndex="0" />

                <!-- Email TextField -->
                <TextField fx:id="emailText" layoutX="281.0" layoutY="157.0" minWidth="-Infinity" prefHeight="30.0" prefWidth="250.0" GridPane.rowIndex="1" />

                <!-- Password Label -->
                <Label id="passwordLabel" text="Password" GridPane.rowIndex="2" />

                <!-- Password Field -->
                <PasswordField fx:id="passwordText" GridPane.rowIndex="3" />
            </children>
        </GridPane>

        <!-- Login Button -->
        <Button fx:id="loginButton" layoutX="168.0" layoutY="270.0" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="30.0" prefWidth="123.0" text="Log In" />

        <!-- Register Button -->
        <Button fx:id="registerButton" layoutX="300.0" layoutY="270.0" mnemonicParsing="false" onAction="#handleRegisterButton" prefHeight="30.0" prefWidth="123.0" text="Sign Up" />

