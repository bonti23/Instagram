<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubb.scs.map.laborator_6nou.controller.Confirmation" style="-fx-background-color: linear-gradient(to bottom, #833ab4, #fd1d1d, #fcb045);">
    <children>
        <!-- StackPane to center all content -->
        <StackPane prefWidth="400.0" prefHeight="200.0">
            <VBox alignment="CENTER" spacing="30">
                <!-- Centered Label -->
                <Label text="Are you sure you want to delete your account?" />

                <!-- Buttons beneath the Label -->
                <HBox alignment="CENTER" spacing="20">
                    <Button text="Yes" onAction="#handleYesButton" />
                    <Button text="No" onAction="#handleNoButton" />
                </HBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>
